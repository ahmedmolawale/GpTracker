<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ahmedmolawale.gradepointmanager.StandardDashboard"
    tools:showIn="@layout/app_bar_standard_dashboard">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/abc_search_url_text_normal"
            android:dividerPadding="@dimen/abc_config_prefDialogWidth"
            android:orientation="vertical"
            android:padding="15dp"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#ffffffff"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/welcome_on_dashboard"
                    android:textColor="#000000"
                    android:textSize="16sp" />

            </LinearLayout>

            <View
                style="@style/Divider"
                android:layout_marginBottom="0dp" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:background="#ffffffff"
                android:orientation="vertical">

                <Button
                    android:id="@+id/current_session"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:drawableLeft="@mipmap/ic_current_sess"
                    android:drawableStart="@mipmap/ic_current_sess"
                    android:text="@string/current_session"
                    android:textAllCaps="false"
                    android:textColor="@color/blue"

                    android:textSize="17sp" />

            </LinearLayout>

            <View
                style="@style/Divider"
                android:layout_marginBottom="0dp" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffffff"
                android:orientation="vertical">

                <Button
                    android:id="@+id/previous_session"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:drawableLeft="@mipmap/ic_previous_sess"
                    android:drawableStart="@mipmap/ic_previous_sess"
                    android:text="@string/previous_session"
                    android:textAllCaps="false"
                    android:textColor="@color/blue"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="#ffffffff"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/grades_on_dashboard"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                style="@style/Divider"
                android:layout_marginBottom="0dp" />

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#ffffffff"
                android:orientation="vertical">

                <Button
                    android:id="@+id/view_grades"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:drawableLeft="@mipmap/ic_view_grade"
                    android:drawableStart="@mipmap/ic_view_grade"
                    android:text="@string/view_grades"
                    android:textAllCaps="false"
                    android:textColor="@color/blue"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="#ffffffff"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/status_on_dashboard"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                style="@style/Divider"
                android:layout_marginBottom="0dp" />

            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#ffffffff"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/current_cgpa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableLeft="@mipmap/ic_current_cgpa"
                    android:drawableStart="@mipmap/ic_current_cgpa"
                    android:text="@string/current_cgpa"
                    android:textAllCaps="false"
                    android:textColor="@color/blue"
                    android:textSize="17sp" />


            </LinearLayout>

            <View
                style="@style/Divider"
                android:layout_marginBottom="0dp" />

            <LinearLayout
                android:id="@+id/linearLayout7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#ffffffff"
                android:orientation="vertical">

                <Button
                    android:id="@+id/settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:drawableLeft="@mipmap/ic_setting"
                    android:drawableStart="@mipmap/ic_setting"
                    android:text="@string/settings_on_dashboard"
                    android:textAllCaps="false"

                    android:textColor="@color/blue"
                    android:textSize="17sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
